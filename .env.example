# CompTrails Compensation Calculator - Environment Variables Template
# Copy this file to .env.local and fill in the actual values

# Application URL (use http://localhost:3000 for local development)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Convex Database Configuration
# Get this URL from your Convex dashboard after running: npx convex dev
NEXT_PUBLIC_CONVEX_URL=https://your-convex-deployment.convex.cloud

# WorkOS Authentication Configuration
# Get these values from your WorkOS dashboard
WORKOS_API_KEY=sk_test_your_workos_api_key_here
WORKOS_CLIENT_ID=client_your_workos_client_id_here

# PostHog Analytics Configuration (Optional)
# Get these values from your PostHog dashboard
NEXT_PUBLIC_POSTHOG_KEY=phc_your_posthog_key_here
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com

# Environment Configuration
NEXT_PUBLIC_ENVIRONMENT=development

# FMV API Configuration
# Alpha Vantage - Free tier: 5 API requests per minute, 500 per day
# Get your free API key at: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# Finnhub - Free tier: 60 API requests per minute
# Get your free API key at: https://finnhub.io/register
FINNHUB_API_KEY=your_finnhub_api_key_here

# FMV Configuration
FMV_DEFAULT_PROVIDER=yahoo  # Options: yahoo, alphavantage, finnhub
FMV_ENABLE_FALLBACK=true   # Enable automatic fallback to other providers
FMV_CACHE_TTL_MINUTES=5     # Cache duration for market hours
FMV_CACHE_TTL_CLOSED=60     # Cache duration for closed market